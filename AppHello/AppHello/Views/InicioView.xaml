<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHello.Views.InicioView"
             Title="Hello Xamarim"
             >
    <ContentPage.Content>
        <StackLayout>
            <Entry
                Text="{Binding Hello}"
             />
            <Label 
                Text="{Binding Hello}"
            />
            <Entry
                Text="{Binding Nome}"
             />
            <Label 
                Text="{Binding Nome}"
            />

            <Button
		        Text="Limpar"
		        Command="{Binding LimparCommand}"
            />

            <Button
		        Text="Nova Pagina"
		        Command="{Binding PaginaCommand}"
            />

            <ActivityIndicator IsRunning="{Binding IsBusy}" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>